<Window x:Class="Hazar_FinalEF.SellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hazar_FinalEF"
        mc:Ignorable="d"
        Title="SellWindow" Height="300" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Firebrick"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="BorderBrush" Value="DarkRed"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="Padding" Value="1"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="LightGray"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="DarkSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.6*" ></RowDefinition>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Name="titleTb" HorizontalAlignment="Center" FontSize="20"> INPUT PEOPLE DATA</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0">Name :</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0">LastName :</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2">Birthday:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="2">Phone:</TextBlock>
        <TextBox x:Name="NameTB" Grid.Row="1" Grid.Column="1"></TextBox>
        <TextBox x:Name="LastNameTB" Grid.Row="2" Grid.Column="1"></TextBox>
        <DatePicker x:Name="BirthdayTB" Padding="10" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" Width="100" />
        <TextBox x:Name="PhoneTB" Grid.Row="2" Grid.Column="3"></TextBox>

        <Button Grid.Column="3" Grid.Row="5" Margin="10" Name="editBt" Click="SELLBt_Click">INPUT</Button>
    </Grid>
</Window>

