<Window x:Class="Hazar_FinalEF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hazar_FinalEF"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
        <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Firebrick"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="BorderBrush" Value="DarkRed"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Width="200" Height="60" Margin="0,85,0,0" FontSize="22" Name="Log_In_BT" Click="Log_In_Click">Log In</Button>
        <Button Grid.Row="1" Width="200" Height="60" Margin="0" FontSize="22" Name="Sing_In_BT" Click="Sing_In_Click">Sing In</Button>
        <Button Grid.Row="2" Width="200" Height="60" Margin="0,0,0,85" FontSize="22" Name="Exit_BT" Click="EXIT_Program_Click">Exit</Button>
    </Grid>
</Window>
